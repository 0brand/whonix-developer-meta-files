set -x

true "INFO: Currently running script: $0${1+"$@"}"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$MYDIR"

source ../../Whonix/help-steps/pre
source ../../Whonix/help-steps/variables

download_sources() {
   trap "error_handler_general" ERR INT TERM

   "$MYDIR"/mount-img
   "$MYDIR"/prevent-daemons-from-starting

   export WHONIX_CHROOT_MOUNT_RESOLV_CONF="0"
   "$MYDIR"/chroot-img

   maybe_run_in_chroot "/usr/share/whonix/whonix_download_sources"
   sync

   "$MYDIR"/unchroot-img
   "$MYDIR"/unprevent-daemons-from-starting
   "$MYDIR"/unmount-img
}

move_sources() {
   trap "error_handler_general" ERR INT TERM

   "$MYDIR"/mount-img
   "$MYDIR"/prevent-daemons-from-starting

   export WHONIX_CHROOT_MOUNT_RESOLV_CONF="0"
   "$MYDIR"/chroot-img

   mkdir --parents ""$WHONIX_BINARY"/sources/"$VMNAME""

   mv "$CHROOT_FOLDER/usr/share/whonix/sources/*" ""$WHONIX_BINARY"/sources/"$VMNAME"/"

   #rm -r "$CHROOT_FOLDER/usr/share/whonix/sources/"

   chown --recursive "$user_name:$user_name" ""$WHONIX_BINARY"/"

   "$MYDIR"/unchroot-img
   "$MYDIR"/unprevent-daemons-from-starting
   "$MYDIR"/unmount-img
}

true "${bold}INFO: Currently running script: $0 ${1+"$@"}${reset}"

download_sources
move_sources

benchmark_time_end ## sets benchmark_took_time (implemented in help-steps/pre)
true "${bold}INFO: End of: $0 No error detected. (benchmark: $benchmark_took_time)${reset}"
