pkg_git_diff_branch_development() {
   trap "build_all_error_handler" ERR

   reponame="$(basename "$item")"
   cd "$reponame"
   git diff development || true
   cd ..
}

pkg_packaging_copy() {
   trap "build_all_error_handler" ERR

   cp "../CONTRIBUTING.md" "$item/"
   cp "../GPLv3" "$item/"
   if [ -f "$item/setup.py" ]; then
      cp "../Makefile" "$item/makefile_generic"
   else
      cp "../Makefile" "$item/"
   fi
   cp "../make-helper.bsh" "$item/"
   rm --force "$item/.gitattributes"

   true
}

pkg_packaging_files_diff() {
   trap "build_all_error_handler" ERR

   diff "../CONTRIBUTING.md" "$item/"
   diff "../GPLv3" "$item/"
   if [ -f "$item/setup.py" ]; then
      diff "../Makefile" "$item/makefile_generic"
   else
      diff "../Makefile" "$item/"
   fi
   diff "../make-helper.bsh" "$item/"
   diff "../.gitattributes" "$item/"
   diff "../debian/source/format" "$item/debian/source/format"
   diff "../debian/compat" "$item/debian/compat"
   diff "../debian/gain-root-command" "$item/debian/gain-root-command"

   if [ ! -f "../COPYING" ]; then
      error "../COPYING does not exist."
   fi

   if [ ! -f "$item/README.md" ]; then
      error "$item/README.md does not exist."
   fi

   if [ -f "$item/setup.py" ]; then
      true
   else
      diff "./$item/COPYING" "$item/debian/copyright"

      if [ ! -f "$item/debian/changelog" ]; then
         error "$item/debian/changelog does not exist."
      fi
      if [ ! -f "$item/debian/control" ]; then
         error "$item/debian/control does not exist."
      fi
      if [ ! -f "$item/debian/copyright" ]; then
         error "$item/debian/copyright does not exist."
      fi
      if [ ! -f "$item/debian/rules" ]; then
         error "$item/debian/rules does not exist."
      fi
      if [ ! -f "$item/debian/watch" ]; then
         error "$item/debian/watch does not exist."
      fi
   fi
}

pkg_debian_changelog_bump() {
   trap "build_all_error_handler" ERR

   cd "$item"

   make deb-chl-bumpup

   cd ..

   true
}

