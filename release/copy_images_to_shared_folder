set -x
true "Currently running script: $0 ${1+"$@"}"
set -o pipefail

error_handler() {
   echo "FAILED!"
   exit 1
}

trap "error_handler" ERR

## disable cmd line parser, since not needed
export WHONIX_BUILD_PARSED="1"
export VMNAME="internalrun"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$MYDIR"

source ../../Whonix/help-steps/variables

#sudo mount -t vboxsf -o uid=1000,gid=1000 shared /mnt/shared

version="$whonix_build_closest_git_tag"

cd "$WHONIX_BINARY"

## {{ hash sum

## md5sum is sufficient here, because it gets only used for an integrity check,
## to see if copying around on a local hdd succeeded.

#rm --force sha512sum
#rm --force sha1sum
rm --force md5sum

## Create sha512sum sum to ensure copying was done without bit flip.
#sha512sum *.ova >> sha512sum
#sha512sum *.qcow2 >> sha512sum
#sync
## Debugging.
#cat sha512sum

## Create sha1sum to compare with sourceforge.
#sha1sum *.ova >> sha1sum
#sha1sum *.qcow2 >> sha1sum
#sync
## Debugging.
#cat sha1sum

## Create md5sum to compare with sourceforge.
md5sum *.ova >> md5sum
md5sum *.qcow2 >> md5sum
sync
## Debugging.
cat md5sum

#cp "sha512sum" "/mnt/shared/"
#cp "sha1sum" "/mnt/shared/"
cp "md5sum" "/mnt/shared/"

## }}

cp "Whonix-Gateway-$version.ova" "/mnt/shared/"
cp "Whonix-Gateway-$version.qcow2" "/mnt/shared/"
sync

cp "Whonix-Workstation-$version.ova" "/mnt/shared/"
cp "Whonix-Workstation-$version.qcow2" "/mnt/shared/"
sync

benchmark_time_end ## sets benchmark_took_time (implemented in help-steps/pre)
true "${bold}INFO: End of: $0 No error detected. (benchmark: $benchmark_took_time)${reset}"
