#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -x
true "INFO: Currently running script: $BASH_SOURCE${1+"$@"}"

## disable cmd line parser, since not needed
export whonix_build_one_parsed="1"
export VMNAME="internalrun"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$MYDIR"

source ../../../help-steps/pre
source ../../../help-steps/colors
source ../../../help-steps/variables

root_check_no() {
   if [ "$(id -u)" = "0" ]; then
      true "ERROR: Do not run this as root!"
      exit 1
   fi
}

preparation() {
   shopt -s globstar
}

rsync_test() {
   "$whonix_dev_meta_files_folder/release/rsync-test"
   true "${cyan}INFO $BASH_SOURCE: Please press enter to continue showing dists.${reset}"
   read temp
}

show_dists() {
   true "${cyan}INFO $BASH_SOURCE: Showing dists...${reset}"
   set +x
   for file_name in "$WHONIX_BINARY/aptrepo_remote/dists/"**; do
      if [ -d "$file_name" ]; then
         continue
      fi
      echo "$file_name"
   done
   unset file_name
   set -x
}

show_pool() {
   true "${cyan}INFO $BASH_SOURCE: Please press enter to continue showing pool.${reset}"
   read temp
   true "${cyan}INFO $BASH_SOURCE: Showing pool...${reset}"
   set +x
   for file_name in "$WHONIX_BINARY/aptrepo_remote/pool/"**; do
      if [ -d "$file_name" ]; then
         continue
      fi
      echo "$file_name"
   done
   unset file_name
   set -x
}

upload_dry_dists() {
   true "${cyan}INFO $BASH_SOURCE: Please press enter to continue with dists with --dry-run.${reset}"
   read temp
   true "${cyan}INFO $BASH_SOURCE: Running dists with --dry-run...${reset}"
   rsync \
      --dry-run \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/dists/"* \
      "adrelanos,whonixdevelopermetafiles@frs.sourceforge.net:/home/frs/project/whonixdevelopermetafiles/internal/dists/"
   rsync \
      --dry-run \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/dists/"* \
      "root@whonix.org:/var/rsync/whonixdevelopermetafiles/internal/dists/"
}

upload_dry_pool() {
   true "${cyan}INFO $BASH_SOURCE: Please press enter to continue with pool with --dry-run.${reset}"
   read temp
   true "${cyan}INFO $BASH_SOURCE: Running pool with --dry-run...${reset}"
   rsync \
      --dry-run \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/pool/"* \
      "adrelanos,whonixdevelopermetafiles@frs.sourceforge.net:/home/frs/project/whonixdevelopermetafiles/internal/pool/"
   rsync \
      --dry-run \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/pool/"* \
      "root@whonix.org:/var/rsync/whonixdevelopermetafiles/internal/pool/"
}

upload_real_ask() {
   true "${cyan}INFO $BASH_SOURCE: Please press enter to continue to uploading dists and pool.${reset}"
   read temp
}

upload_real_dists() {
   true "${cyan}INFO $BASH_SOURCE: Uploading dists...${reset}"
   rsync \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/dists/"* \
      "adrelanos,whonixdevelopermetafiles@frs.sourceforge.net:/home/frs/project/whonixdevelopermetafiles/internal/dists/"
   rsync \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/dists/"* \
      "root@whonix.org:/var/rsync/whonixdevelopermetafiles/internal/dists/"
}

upload_real_pool() {
   true "${cyan}INFO $BASH_SOURCE: Uploading pool...${reset}"
   rsync \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/pool/"* \
      "adrelanos,whonixdevelopermetafiles@frs.sourceforge.net:/home/frs/project/whonixdevelopermetafiles/internal/pool/"
   rsync \
      $rsync_opts \
      --recursive \
      --rsh ssh \
      "$WHONIX_BINARY/aptrepo_remote/pool/"* \
      "root@whonix.org:/var/rsync/whonixdevelopermetafiles/internal/pool/"
}

main_upload_repository() {
   root_check_no
   preparation
   rsync_test
   show_dists
   show_pool
   upload_dry_dists
   upload_dry_pool
   upload_real_ask
   upload_real_dists
   upload_real_pool
}

main_upload_repository
benchmarktimeend ## sets benchmark_took_time (implemented in help-steps/pre)
true "${bold}INFO: End of: $BASH_SOURCE | $whonix_build_error_counter error(s) detected. (benchmark: $benchmark_took_time)${reset}"
